<!DOCTYPE html>
<html lang="en">

<%- include ('../partials/head') %>


    <body>
        <%- include ('../partials/header') %>
            <section>
                <div class="containerProf">
                    <img src="/img/users/<%=user.avatar%>" class="avatar">

                    <div class="info">
                        <p>
                            <%= user.first_name + " " + user.last_name %>
                        </p>
                        <p>
                            E-mai: <%= user.mail %>
                        </p>
                        <p>
                            Teléfono: <%= user.telephone %>
                        </p>

                        <div class="intereses">
                            <label class="label">Intereses</label>
                            <label class="check"><input type="checkbox" <%=user.casa==1 ? 'checked' : null
                                    %>>Casas</label>
                            <label class="check"><input type="checkbox" <%=user.departamento==1 ? 'checked' : null
                                    %>>Departamentos</label>
                            <label class="check"><input type="checkbox" <%=user.hotel=='1' ? 'checked' : null
                                    %>>Hoteles</label>
                            <label class="check"><input type="checkbox" <%=user.hosteria=='1' ? 'checked' : null
                                    %>>Hosterías</label>
                            <label class="check"><input type="checkbox" <%=user.aparts=='1' ? 'checked' : null %>>
                                Aparts</label>
                        </div>
                        <div class="detalle_botones">
                            <button class="profile_button">
                                <a href="/editUser"> Editar</a>
                            </button>
                            <button class="profile_button">
                                <a href="/products/create"> Publicar</a>
                            </button>
                            <button class="profile_button">
                                <a href=""> Publicaciones</a>
                            </button>
                            <% if(locals.admLogged){ %>
                                <button class="profile_button">
                                    <a href="/register"> Crear Usuario</a>
                                </button>
                                <button class="profile_button">
                                    <a href="/destinations"> Destinos</a>
                                </button>
                            
                            <%} %>
                        </div>
                    </div>

                </div>

            </section>



            <%- include ('../partials/footer') %>

    </body>
    <script src="/js/profile.js"></script>

</html>