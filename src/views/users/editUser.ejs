<!DOCTYPE html>
<html lang="en">

<%- include ('../partials/head') %>

    <body>

        <%- include ('../partials/header') %>

            <section class="form">
                <form method="POST" action="/editUser?_method=PUT" enctype="multipart/form-data" class="register">
                    <div class="control-formulario">

                        <input type="text" name="first_name" 
                            class="control <%= locals.errors && errors.first_name ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.first_name : user.first_name %>">
                        <% if(locals.errors && errors.first_name) { %>
                            <div class="text-danger">
                                <%= errors.first_name.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="control-formulario">
                        <input type="text" name="last_name"
                            class="control <%= locals.errors && errors.last_name ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.last_name : user.last_name %>">
                        <% if(locals.errors && errors.last_name) { %>
                            <div class="text-danger">
                                <%= errors.last_name.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="control-formulario">
                        <input type="text" name="mail"
                            class="control <%= locals.errors && errors.mail ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.mail : user.mail %>">
                        <% if(locals.errors && errors.mail) { %>
                            <div class="text-danger">
                                <%= errors.mail.msg %>
                            </div>
                            <% } %>
                    </div>

                    <div class="control-formulario">
                        <input type="text" name="telephone"
                            class="control <%= locals.errors && errors.telephone ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.telephone : user.telephone %>">
                        <% if(locals.errors && errors.telephone) { %>
                            <div class="text-danger">
                                <%= errors.telephone.msg %>
                            </div>
                            <% } %>
                    </div>

                    <div class="control-formulario">
                        <label class="label">Imagen de perfil:</label>
                        <input type="file" name="avatar"
                            class="control-formulario <%= locals.errors && errors.avatar ? 'is-invalid' : null %>">
                        <% if (locals.errors && errors.avatar) { %>
                            <div class="text-danger">
                                <%= errors.avatar.msg %>
                            </div>
                            <% } %>
                    </div>

                    <div class="intereses">
                        <label class="label">Intereses</label>
                        <label class="check"><input type="checkbox" <%=user.casa==1 ? 'checked' : null
                                %>>Casas</label>
                        <label class="check"><input type="checkbox" <%=user.departamento==1 ? 'checked' : null
                                %>>Departamentos</label>
                        <label class="check"><input type="checkbox" <%=user.hotel=='1' ? 'checked' : null
                                %>>Hoteles</label>
                        <label class="check"><input type="checkbox" <%=user.hosteria=='1' ? 'checked' : null
                                %>>Hoster√≠as</label>
                        <label class="check"><input type="checkbox" <%=user.aparts=='1' ? 'checked' : null %>>
                            Aparts</label>
                    </div>
                    
                        <div class="buttons">
                            <button type="submit" class="boton-formulario">Confirmar</button>
                            <button type="reset" class="boton-formulario">Resetear</button>
                        </div>

                </form>
            </section>

            <%- include ('../partials/footer') %>
    </body>

</html>