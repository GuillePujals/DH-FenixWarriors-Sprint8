<!DOCTYPE html>
<html lang="en">

<%- include ('../partials/head') %>

    <body>

        <%- include ('../partials/header') %>

            <section class="form">
                <form method="POST" action="/register" enctype="multipart/form-data" class="register">

                    <div class="errores">
                        <ul>

                        </ul>
                    </div>
                    <div class="control-formulario">

                        <input type="text" placeholder="Nombre" name="first_name" id= "name"
                            class="control <%= locals.errors && errors.first_name ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.first_name : null %>">
                            <div class="text-danger"></div>
                        <% if(locals.errors && errors.first_name) { %>
                            <div class="text-danger">
                                <%= errors.first_name.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="control-formulario">
                        <input type="text" placeholder="Apellido" name="last_name" id= "lastName"
                            class="control <%= locals.errors && errors.last_name ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.last_name : null %>">
                            <div class="text-danger"></div>
                        <% if(locals.errors && errors.last_name) { %>
                            <div class="text-danger">
                                <%= errors.last_name.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="control-formulario">
                        <input type="text" placeholder="E-mail" name="mail" id="email"
                            class="control <%= locals.errors && errors.mail ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.mail : null %>">
                            <div class="text-danger"></div>
                        <% if(locals.errors && errors.mail) { %>
                            <div class="text-danger">
                                <%= errors.mail.msg %>
                            </div>
                            <% } %>
                    </div>

                    <div class="control-formulario">
                        <input type="text" placeholder="Celular" name="telephone" id="phone"
                            class="control <%= locals.errors && errors.telephone ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.telephone : null %>">
                            <div class="text-danger"></div>
                        <% if(locals.errors && errors.telephone) { %>
                            <div class="text-danger">
                                <%= errors.telephone.msg %>
                            </div>
                            <% } %>
                    </div>

                    <div class="control-formulario">
                        <label class="label">Imagen de perfil:</label>
                        <input type="file" name="avatar" id = "avatar"
                        
                            class="control-formulario <%= locals.errors && errors.avatar ? 'is-invalid' : null %>">
                            <div class="text-danger"></div>
                        <% if (locals.errors && errors.avatar) { %>
                            <div class="text-danger">
                                <%= errors.avatar.msg %>
                            </div>
                            <% } %>
                    </div>
                    <% if(locals.admLogged){ %>
                        <label class="check"><input type="checkbox" name="admin" value = 1 <%= locals.oldData && oldData.admin == 1 ? 'checked' : null %>>Admin</label>
                    
                    <%} %>
                    <div class="intereses">
                        <label class="label">Intereses</label>
                        <label class="check"><input type="checkbox" name="casa" value = 1 <%= locals.oldData && oldData.casa == 1 ? 'checked' : null %>>Casas</label>
                        <label class="check"><input type="checkbox" name="departamento" value = 1 <%= locals.oldData && oldData.departamento == 1 ? 'checked' : null %>>Departamentos</label>
                        <label class="check"><input type="checkbox" name="hotel" value = 1 <%= locals.oldData && oldData.hotel == 1 ? 'checked' : null %>>Hoteles</label>
                        <label class="check"><input type="checkbox" name="hosteria" value = 1 <%= locals.oldData && oldData.hosteria == 1 ? 'checked' : null %>>Hoster√≠as</label>
                        <label class="check"><input type="checkbox" name="aparts" value = 1 <%= locals.oldData && oldData.aparts == 1 ? 'checked' : null %>>Aparts</label>
                    </div>
                    
                    <div class="control-formulario">
                        <input type="password" placeholder="Ingrese la password" name="password" id="password"
                            class="control <%= locals.errors && errors.password ? 'is-invalid' : null %>">
                            <div class="text-danger"></div>
                        <div class="text-danger">
                            <% if(locals.errors && errors.password) { %>
                                <div class="text-danger">
                                    <%= errors.password.msg %>
                                </div>
                                <% } %>
                        </div>
                        <!-- <div class="control-formulario">
                <input type="password" placeholder="Repita la password" name="password2" class="control" required minlength="3">
            </div>             -->
                        <div class="buttons">
                            <button type="submit" class="boton-formulario">Registrarme</button>
                            <button type="reset" class="boton-formulario">Resetear</button>
                        </div>

                </form>
            </section>

            <%- include ('../partials/footer') %>
           
            <script src ="/js/validatorRegister.js"></script>
    </body>

</html>